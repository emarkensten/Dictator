{
    "manifest_version": 3,
    "name": "Word Replacer: Trump Edition",
    "version": "1.0",
    "description": "Simple text replacement tool that changes 'Donald Trump' to 'Dictator Trump' on webpages",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
  